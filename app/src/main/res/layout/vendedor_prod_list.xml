<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="20dp"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/clProductoVendedor"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_alignParentTop="true"
    android:background="@drawable/list_orden_rect">

    <TextView
        android:layout_marginStart="15dp"
        android:id="@+id/tvEstadoProd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Agotado"
        android:layout_marginBottom="10dp"
        android:textColor="#C13030"
        android:textColorHint="#C13030"
        app:layout_constraintBottom_toTopOf="@+id/tvNombreProd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_marginStart="15dp"
        android:textSize="19sp"
        android:id="@+id/tvNombreProd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
