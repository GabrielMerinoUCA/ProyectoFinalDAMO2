<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="200dp"
    android:layout_marginStart="5dp"
    android:layout_height="200dp"
    tools:context=".ClienteLocalVistaFragment">

    <ImageView
        android:id="@+id/ivProd"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop"
        android:src="@drawable/hamburguesa"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tvNombreProd"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:textColor="#175676"
        android:textSize="13sp"
        android:layout_marginStart="10dp"
        android:hint="Nombe Producto"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivProd"
        app:layout_constraintVertical_bias="0.0" />
    <TextView
        android:id="@+id/tvPrecioProd"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="C$ 180"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvNombreProd"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>